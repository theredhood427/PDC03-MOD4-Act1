<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PDC03_MOD4.activity01">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="LISTVIEW!" />
            <ListView SelectionMode="Single" SelectedItem="Item No. 2">
                <ListView.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Item No.1</x:String>
                        <x:String>Item No.2</x:String>
                        <x:String>Item No.3</x:String>
                        <x:String>Item No.4</x:String>
                    </x:Array>
                </ListView.ItemsSource>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>